{
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["_default"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "shape": {
        "type": "object",
        "order": 1,
        "title": "Shape",
        "properties": {
          "width": {
            "title": "How large should the button appear?",
            "format": "slider",
            "order": 1,
            "type": "number",
            "default": 50,
            "step": 1,
            "minimum": 40,
            "maximum": 100
          }
        }
      },
      "position": {
        "order": 2,
        "title": "Position",
        "type": "string",
        "enum": [
          "top-left",
          "top-right",
          "bottom-left",
          "bottom-right"
        ],
        "enumNames": {
          "top-left": "Top left corner",
          "top-right": "Top right corner",
          "bottom-left": "Bottom left corner",
          "bottom-right": "Bottom right corner"
        },
        "format": "radios",
        "default": "bottom-right"
      }

    }
  }
}
